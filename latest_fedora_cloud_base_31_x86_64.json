{
  "variables": {
    "region": "us-east-1"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "profile": "default",
      "region": "{{user `region`}}",
      "instance_type": "t3.micro",
      "source_ami_filter": {
        "filters": {
          "name": "Fedora-Cloud-Base-31-*",
          "root-device-type": "ebs",
          "virtualization-type": "hvm",
          "architecture": "x86_64"
        },
        "owners": [
          "125523088429"
        ],
        "most_recent": true
      },
      "ssh_username": "fedora",
      "ami_name": "my-fedora-cloud-base-31-{{isotime \"2006-01-02-150405\"}}",
      "ami_description": "Latest Fedora 31 Cloud Base with updates",
      "run_tags": {
        "Name": "packer-builder-agent"
      },
      "tags": {
        "Name": "my-fedora-cloud-base-31",
        "Author": "alex.zimin@gmail.com"
      }
    }
  ],
  "provisioners": [
    {
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done",
        "sudo dnf upgrade --refresh -y"
      ],
      "type": "shell"
    }
  ],
  "post-processors": [
    [
      {
        "output": "manifest.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ]
}
